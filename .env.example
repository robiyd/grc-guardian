# GRC Guardian API Configuration
# Copy this file to .env and configure your values

# API Security
GUARDIAN_API_KEY=dev-key-change-in-production

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_SECONDS=60

# Input Validation
MAX_PROMPT_SIZE_BYTES=8192
ENABLE_PROMPT_INJECTION_FILTER=true

# Storage
STORAGE_PATH=/tmp/grc-guardian/runs

# Logging
LOG_LEVEL=INFO
JSON_LOGS=true

# AWS Configuration
BEDROCK_REGION=us-west-2
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0

# AWS Credentials (configure via AWS CLI or IAM role)
# AWS_ACCESS_KEY_ID=your-access-key-here
# AWS_SECRET_ACCESS_KEY=your-secret-key-here
AWS_REGION=us-west-2

# Bedrock Guardrails (Optional)
# BEDROCK_GUARDRAIL_ID=your-guardrail-id
# BEDROCK_GUARDRAIL_VERSION=1

# Evidence Signing
# SIGNING_KEY=change-to-strong-secret

# Prevent Python bytecode caching
PYTHONDONTWRITEBYTECODE=1
