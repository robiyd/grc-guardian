{
  "env": "prod",
  "region": "us-west-2",
  "scope": "compliance audit",
  "steps": [
    {
      "description": "Check AWS Config rules compliance status",
      "params": {
        "compliance_types": [
          "NON_COMPLIANT",
          "NOT_APPLICABLE"
        ],
        "resource_types": [
          "AWS::S3::Bucket",
          "AWS::EC2::Instance",
          "AWS::IAM::Role"
        ],
        "rule_types": [
          "AWS_MANAGED",
          "CUSTOM"
        ]
      },
      "tool": "aws_config_eval"
    },
    {
      "description": "Retrieve relevant compliance policies and standards",
      "params": {
        "categories": [
          "security",
          "compliance",
          "governance"
        ],
        "doc_types": [
          "policies",
          "standards",
          "frameworks"
        ],
        "max_results": 50
      },
      "tool": "rag_retrieve"
    },
    {
      "description": "Evaluate security group configurations",
      "params": {
        "include_remediation": true,
        "resource_types": [
          "AWS::EC2::SecurityGroup"
        ],
        "rule_types": [
          "AWS_MANAGED"
        ]
      },
      "tool": "aws_config_eval"
    }
  ]
}
