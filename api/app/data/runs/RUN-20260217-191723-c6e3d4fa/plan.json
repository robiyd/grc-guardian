{
  "env": "prod",
  "region": "us-west-2",
  "scope": "S3 bucket security assessment",
  "steps": [
    {
      "description": "Check S3 bucket encryption",
      "params": {
        "resource_type": "AWS::S3::Bucket",
        "rule": "s3-bucket-server-side-encryption-enabled"
      },
      "tool": "aws_config_eval"
    },
    {
      "description": "Verify S3 bucket public access blocks",
      "params": {
        "resource_type": "AWS::S3::Bucket",
        "rule": "s3-account-level-public-access-blocks"
      },
      "tool": "aws_config_eval"
    },
    {
      "description": "Check S3 bucket versioning",
      "params": {
        "resource_type": "AWS::S3::Bucket",
        "rule": "s3-bucket-versioning-enabled"
      },
      "tool": "aws_config_eval"
    },
    {
      "description": "Get S3 security best practices",
      "params": {
        "doc_type": "security_policies",
        "query": "S3 bucket security configuration requirements"
      },
      "tool": "rag_retrieve"
    }
  ]
}
