{
  "env": "prod",
  "region": "us-west-2",
  "scope": "S3 public access and encryption compliance check",
  "steps": [
    {
      "description": "Check S3 buckets for public access blocks",
      "params": {
        "resource_type": "AWS::S3::Bucket",
        "rule": "s3-bucket-public-access-prohibited"
      },
      "tool": "aws_config_eval"
    },
    {
      "description": "Verify S3 bucket encryption settings",
      "params": {
        "resource_type": "AWS::S3::Bucket",
        "rule": "s3-bucket-server-side-encryption-enabled"
      },
      "tool": "aws_config_eval"
    },
    {
      "description": "Get relevant S3 security policies and standards",
      "params": {
        "doc_types": [
          "policies",
          "standards"
        ],
        "query": "s3 encryption and public access requirements"
      },
      "tool": "rag_retrieve"
    }
  ]
}
